<html>
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
    <title>Shoe shopping</title>
</head>
<body>
    <h1>{{ store.getStoreName }}</h1>

    {% if brands is not empty %}
        <p>Here are the brands for this Store:</p>
        <ul>
            {% for brand in brands %}
                <li>{{ brand.getBrandName }}</li>
            {% endfor %}
        </ul>
    {% endif %}

    <h4>Add a brand to this store:</h4>

    <form action='/add_brands' method='post'>
        <input id="store_id" name="store_id" type="hidden" value="{{ store.getStoreId }}">
        <label for="brand_name">Brand Name</label>

        <select id='brand_id' name='brand_id' type='text'>
          {% for brand in all_brands %}
            <option value="{{ brand.getBrandId }}"> {{ brand.getBrandName }} </option>
          {% endfor %}
        </select>
        <button type='submit'>Add Brand</button>
    </form>

    <p><a href="/stores/{{ store.getStoreId }}/edit">Edit this store</a></p>

    <p><a href='/'>Home</a></p>


</body>
</html>
